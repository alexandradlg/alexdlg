<h1>Related payments</h1>
<div class="container">
    <table class="table">
      <tr>
        <th>Month</th>
        <th>Amount</th>
        <th>Payment Status</th>
      </tr>
      <% @payments.each do |payment| %>
        <tr>
          <td><%= payment.month.strftime("%B %Y" ) %></td>
          <td><%= payment.price %> â‚¬</td>
          <% if payment.guid == nil %>
          <td><%= button_to "To be paid", update_payment_status_path(payment), :method => :get, :class => 'btn btn-primary' %></td>
          <% else %>
          <td>Already paid</td>
          <% end %>
        </tr>
        <% end %>
    </table>
    </div>
